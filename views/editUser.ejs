<!DOCTYPE html>
<html>

<head>
    <title>Edit User</title>
</head>

<body>
    <h1>Edit User</h1>
    <% if (locals.errorMessage) { %>
        <p style="color: red;">
            <%= errorMessage %>
        </p>
        <% } %>
            <form action="/update-user/<%= data.rows.id %>" method="POST">
                <input type="hidden" name="userId" value="<%= data.rows.id %>">
                <div>
                    <label for="fullname">Full Name:</label>
                    <input type="text" id="fullname" name="fullname" value="<%= data.rows.fullname %>">
                </div>
                <div>
                    <label for="address">Address:</label>
                    <input type="text" id="address" name="address" value="<%= data.rows.address %>">
                </div>
                <div>
                    <label for="user">Username:</label>
                    <input type="text" id="user" name="user" value="<%= data.rows.username %>" readonly>
                </div>
                <button type="submit">Update User</button>
            </form>
</body>

</html>